@model IEnumerable<MVC.Boilerplate.Models.Category.Queries.Category>
@{
    ViewData["Title"] = "Category List";
}

<div>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item active"><a>Category List</a></li>
        </ol>
    </nav>
</div>
<div class="card my-2 border">
    <div class=" card-header">
        <a type="button" class=" btn btn-sm btn-success btn-sm d-flex float-end mb-2" asp-controller="Category" asp-action="CreateCategory">
            Create&nbsp;
            <i class="fa fa-plus mt-1"></i> &nbsp;
        </a>
            <h3>@ViewData["Title"]</h3>
        <div container card-body>
            <table id="table_id" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.CategoryId</td>
                            <td>@item.Name</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div>
     <button type="button"
            class=" btn btn-sm btn-primary btn-sm d-flex float-end mb-2" onclick="generatePDF()">
        Generate PDF 
    </button>
</div>


@section Scripts{
<script>

    var table = $('#table_id').DataTable({
            "lengthMenu": [ [2, 5, 10, -1], [ 2, 5, 10, "All"] ],
            "pageLength": 5,
             dom: 'Bfrtip',
             "buttons": [  
                    {  
                        extend: 'copy',  
                        className: 'btn btn-light rounded-0 border m-1',  
                        text: '<i class="fa fa-clipboard"></i> Copy' 
                    },  
                    {  
                        extend: 'excel',  
                        className: 'btn btn-light rounded-0 border m-1',  
                        text: '<i class="fa fa-file-excel-o"></i> Excel'  
                    },  
                    {  
                        extend: 'pdf',  
                        className: 'btn btn-light rounded-0 border m-1',  
                        text: '<i class="fa fa-file-pdf-o"></i> Pdf'  
                    },  
                    {  
                        extend: 'csv',  
                        className: 'btn btn-light rounded-0 border m-1',  
                        text: '<i class="fa fa-file"></i> CSV'  
                    },  
                    {  
                        extend: 'print',  
                        className: 'btn btn-light rounded-0 border m-1',  
                        text: '<i class="fa fa-print"></i> Print'  
                    }  
                ]  
        });

        function generatePDF() {
       window.open('@Url.Action("GenerateAllCategoriesPdf", "Category")');
    }
</script>
        }


