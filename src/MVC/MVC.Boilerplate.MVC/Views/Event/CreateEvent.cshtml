@model MVC.Boilerplate.Models.Event.EventDetails
@{
    ViewData["Title"] = "Create Event";
}
<div class="card my-2 border">
    <div class=" card-header">
        <h3>@ViewData["Title"]</h3>
        <form asp-controller="Event" asp-action="CreateEvent">
            <div class="form-group">
                <label class="form-label"></>Name</label>
                <input type="text" class="form-control" asp-for="Name" placeholder="Event Name">
                 <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form-label">Price</label>
                <input type="text" class="form-control" asp-for="Price" placeholder="Enter Price">
                 <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form-label">Atrist</label>
                <input type="text" class="form-control" asp-for="Artist" placeholder="Enter Artist Name">
                 <span asp-validation-for="Artist" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form-label">Date</label>
                <input type="text" class="form-control" asp-for="Date" placeholder="Enter Date">
                 <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form-label">Description</label>
                <input type="text" class="form-control" asp-for="Description" placeholder="Enter Description">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form-label">ImageUrl</label>
                <input type="text" class="form-control" asp-for="ImageUrl" placeholder="Enter ImageUrl">
                 <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form-label">CategoryId</label>
                <input type="text" class="form-control" asp-for="CategoryId" placeholder="Enter CategoryId">
                 <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div><br />
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
